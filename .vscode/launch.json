    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run dotnet test with logger",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "logging": {
                "programOutput": true,
                "processExit": true,
                "moduleLoad": false,
            },
            "program": "dotnet",
            "args": [
                "test",
                "--logger",
                "\"TestPlatform.Extensions.GitHubLogger\""
            ],
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            "stopAtEntry": true,
            "console": "internalConsole",
            "internalConsoleOptions": "openOnFirstSessionStart",
            "env": {
                "VSTEST_HOST_DEBUG": "1"
            }
        },
    ]
}